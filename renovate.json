{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "additionalBranchPrefix": "stg-",
      "matchFileNames": [
        "docker/alpine/stg/Dockerfile",
        "docker/elasticsearch/stg/Dockerfile"
      ],
      "commitMessagePrefix": "renovate/stg ",
      "addLabels": [
        "stg"
      ]
    },
    {
      "additionalBranchPrefix": "prd-",
      "matchFileNames": [
        "docker/alpine/prd/Dockerfile",
        "docker/elasticsearch/prd/Dockerfile"

      ],
      "commitMessagePrefix": "renovate/prd ",
      "addLabels": [
        "prd"
      ]
    },
    {
      "groupName": "datadog",
      "matchPackageNames": [
        "datadog",
        "datadog/agent"
      ]
    }
  ],
  "customManagers": [
    {
      "description": "Update tag in yamlfile",
      "customType": "regex",
      "fileMatch": [
        ".+\\.yaml$"
      ],
      "matchStrings": [
        "#\\s*renovate:\\sdatasource=(?<datasource>[a-z-]+?)(?: depName=(?<depName>.+?))? packageName=(?<packageName>.+?)(?: versioning=(?<versioning>[a-z-]+))?\\s+tag:\\s*(?<currentValue>.+?)"
      ]
    },
    {
      "customType": "regex",
      "description": "update helm",
      "fileMatch": [".*y[a]?ml$"],
      "datasourceTemplate": "helm",
      "matchStrings": [
        "# renovate: depName=(?<depName>.+?) registryUrl=(?<registryUrl>.+?)\\s*version: (?<currentValue>.+?)"
      ]
    },
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": ["ENV YARN_VERSION=(?<currentValue>.*?)\\n"],
      "depNameTemplate": "yarn",
      "datasourceTemplate": "npm"
    },
    {
      "fileMatch": [".*y[a]?ml$"],
      "matchStringsStrategy": "combination",
      "matchStrings": [
        "  url: \"?(?<registryUrl>\\S+)\"?\\s*",
        "      chart: \"?(?<depName>[a-z0-9-]+)\"?\\s*",
        "      version: \"?(?<currentValue>\\S+)\"?\\s*"
      ],
      "datasourceTemplate": "helm"
    }
  ]
}