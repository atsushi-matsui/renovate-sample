{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "update helm",
      "fileMatch": [".*y[a]?ml$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.+?) depName=(?<depName>.+?) registryUrl=(?<registryUrl>.+?)\\s*version=(?<currentValue>.+?)"
      ]
    },
    {
      "customManagers": [
        {
          "customType": "regex",
          "fileMatch": ["^Dockerfile$"],
          "matchStrings": ["ENV YARN_VERSION=(?<currentValue>.*?)\\n"],
          "depNameTemplate": "yarn",
          "datasourceTemplate": "npm"
        }
      ]
    }
  ]
}